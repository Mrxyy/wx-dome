/**index.wxss**/
.img{
	width:100%;
	height: 300rpx;
	margin:0 0 50rpx 0;
}
.xx{
	position: absolute;
	/* top:100%; */
	display: inline-block;
	color: red;
	white-space: nowrap;
	overflow: hidden;
}
.box{
	width: 100%;
	display:flex;
	flex-direction: row;
	flex-wrap: wrap;
}
.nav-item{
	text-align:center;
	flex: 1 1 33.33%;
	overflow: hidden;
	border:1rpx solid #CCCCCC;
	box-sizing: border-box;
}
.nav-item image{
	width:100%;
	height: 180rpx;
}
.footer{
	margin-top: 20rpx;
	display: flex;
	justify-content: space-between;
}
.footer navigation{
	width: 48%;
	border:1rpx solid #666;
}
.footer image{
		width: 100%;
		height:200rpx;
	}

